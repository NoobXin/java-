<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yigang.dao.RepairDao">

	<resultMap type="com.yigang.entity.RepairSearch" id="Repair">
		<id property="repairId" column="repairId" />
		<result property="repairManId" column="repairManId" />
		<result property="repairStatus" column="repairStatus" />
		<result property="roomNum" column="roomNum" />
		<result property="createPerId" column="createPerId" />
		<result property="createTime" column="createTime" />
		<result property="reviewName" column="reviewName" />
		<result property="description" column="description" />
	</resultMap>


	<select id="getAllRepairList" resultMap="Repair" parameterType="com.yigang.entity.RepairSearch">
		select * from repair
	</select>
	<select id="getRepairById" resultMap="Repair" parameterType="java.lang.String">
		select * from repair where repairId = #{repairId}
	</select>
	<select id="getWaitRepairList" resultMap="Repair" parameterType="com.yigang.entity.RepairSearch">
		select * from repair where repairStatus = #{repairStatus}
	</select>
	<insert id="insRepair" parameterType="com.yigang.entity.RepairSearch">
		insert into repair (repairManId,repairStatus,roomNum,createPerId,createTime,description)
		values(#{repairManId},#{repairStatus},#{roomNum},#{createPerId},#{createTime},#{description})
	</insert>
	<update id="updateReview"
			parameterType="com.yigang.entity.RepairSearch">
		update repair
		<set>
			<if test="repairStatus != null">
				repairStatus = #{repairStatus},
			</if>
			<if test="reviewName != null">
				reviewName = #{reviewName},
			</if>
		</set>
		where repairId = #{repairId}
	</update>
	<update id="updateDealRepair"
			parameterType="com.yigang.entity.RepairSearch">
		update repair
		<set>
			<if test="repairStatus != null">
				repairStatus = #{repairStatus},
			</if>
			<if test="repairManId != null">
				repairManId = #{repairManId},
			</if>
			<if test="description != null">
				description = #{description},
			</if>
		</set>
		where repairId = #{repairId}
	</update>
</mapper>